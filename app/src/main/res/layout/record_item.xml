<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:padding="15dp"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="来    源："
        android:id="@+id/textView10"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="积分值："
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10" android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="时    间："
        android:layout_marginTop="10dp"
        android:id="@+id/textView12" android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/btn_state"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/orange"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_state"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_goods"
        android:layout_above="@+id/textView11" android:layout_toEndOf="@+id/textView10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_score"
        android:layout_above="@+id/textView12" android:layout_toEndOf="@+id/textView10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tv_date"
        android:layout_alignTop="@+id/textView12" android:layout_toEndOf="@+id/textView12"/>
</RelativeLayout>