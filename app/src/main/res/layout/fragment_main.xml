<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.mdxx.qqbh.Fragment.MainFra">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <include layout="@layout/list_header"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ima_photo1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/gift"/>
                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/ima_photo1"
                    android:layout_toRightOf="@+id/ima_photo1"
                    android:text="新手大礼包奖励"
                    android:textSize="@dimen/text_size_middle"/>
                <TextView
                    android:id="@+id/tv_sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ima_photo1"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/ima_photo1"
                    android:layout_toRightOf="@+id/ima_photo1"
                    android:text="新用户首次获得5积分"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/text_size_small"/>
                <Button
                    android:id="@+id/btn_gift_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_title1"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_state"
                    android:text="未完成"
                    android:textSize="@dimen/text_size_middle"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="2dp"
                      android:background="@color/light_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ima_photo2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/sign"/>
                <TextView
                    android:id="@+id/tv_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/ima_photo2"
                    android:layout_toRightOf="@+id/ima_photo2"
                    android:text="每日签到领积分"
                    android:textSize="@dimen/text_size_middle"/>
                <TextView
                    android:id="@+id/tv_sub_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ima_photo2"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/ima_photo2"
                    android:layout_toRightOf="@+id/ima_photo2"
                    android:text="每日签到得1积分"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/text_size_small"/>
                <Button
                    android:id="@+id/btn_sign_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_title2"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_state"
                    android:text="未完成"
                    android:textSize="@dimen/text_size_middle"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="2dp"
                      android:background="@color/light_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ima_photo3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/share"/>
                <TextView
                    android:id="@+id/tv_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/ima_photo3"
                    android:layout_toRightOf="@+id/ima_photo3"
                    android:text="分享到5个QQ 群"
                    android:textSize="@dimen/text_size_middle"/>
                <TextView
                    android:id="@+id/tv_sub_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ima_photo3"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/ima_photo3"
                    android:layout_toRightOf="@+id/ima_photo3"
                    android:text="分享到5个QQ群得10积分"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/text_size_small"/>
                <Button
                    android:id="@+id/btn_qq_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_title3"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_state"
                    android:text="未完成"
                    android:textSize="@dimen/text_size_middle"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="2dp"
                      android:background="@color/light_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
                <ImageView
                    android:id="@+id/ima_photo4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/work"/>
                <TextView
                    android:id="@+id/tv_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toEndOf="@+id/ima_photo4"
                    android:layout_toRightOf="@+id/ima_photo4"
                    android:text="做任务赚积分"
                    android:textSize="@dimen/text_size_middle"/>
                <TextView
                    android:id="@+id/tv_sub_title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/ima_photo4"
                    android:layout_marginLeft="5dp"
                    android:layout_toEndOf="@+id/ima_photo4"
                    android:layout_toRightOf="@+id/ima_photo4"
                    android:text="没下载一款app都能得到相应积分\n日无上限"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/text_size_small"/>
                <Button
                    android:id="@+id/btn_work_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_title"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/btn_state"
                    android:text="赚积分"
                    android:textSize="@dimen/text_size_middle"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="2dp"
                      android:background="@color/light_gray"/>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <ImageView android:id="@+id/adview"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="right|top"
            android:src="@android:drawable/ic_delete"/>
    </FrameLayout>
</RelativeLayout>
