<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.mdxx.qqbh.Fragment.UserFra">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp" android:background="@drawable/user_bg">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/app_icon"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:text="会员ID："
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:text="积分：" android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:text="54288" android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:text="10086"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/relativeLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/charge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/user_gift"
                    android:text="兑换虚拟商品"
                    android:textSize="@dimen/text_size_large"/>
                <Button
                    android:id="@+id/btn_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_state" android:text="签到"
                    android:textColor="@color/red"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="5dp"
                      android:background="@color/light_gray"/>
            <RelativeLayout
                android:id="@+id/record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/user_record"
                    android:text="兑换交易记录"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="5dp"
                      android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/user_video"
                    android:text="游戏攻略+视频"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="5dp"
                      android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/user_share"
                    android:text="分享邀请好友"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="5dp"
                      android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/qqgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/user_qqgroup"
                    android:text="一键加群助手"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="15dp"
                      android:background="@color/light_gray"/>
            <RelativeLayout
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dp" android:text="检查更新"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="5dp"
                      android:background="@color/light_gray"/>

            <RelativeLayout
                android:id="@+id/tv_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dp" android:text="关于我们"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="5dp"
                      android:background="@color/light_gray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:drawablePadding="10dp"
                    android:text="最新公告，请随时点击查看"
                    android:textSize="@dimen/text_size_large"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
