<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="org.ddstar.ballbox.Fragment.UserFra">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp" android:background="@drawable/user_bg">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:text="会员ID："
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3"
            android:text="积分：" android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:text="54288" android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/orange"/>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toEndOf="@+id/textView3"
            android:text="10086"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent"
                android:layout_below="@+id/relativeLayout"
                android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout"
        android:orientation="vertical">

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/charge">

            <TextView
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="兑换虚拟商品"
                android:drawableStart="@drawable/user_gift"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="签到"
                android:textColor="@color/orange"
                android:background="@color/red"
                android:id="@+id/button" android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="5dp"
                  android:background="@color/light_gray"/>
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:id="@+id/record">

        <TextView
            android:drawablePadding="10dp"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:text="兑换交易记录"
            android:drawableStart="@drawable/user_record"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="5dp"
                  android:background="@color/light_gray"/>

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:id="@+id/video">

            <TextView
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="游戏攻略+视频"
                android:drawableStart="@drawable/user_video"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="5dp"
                  android:background="@color/light_gray"/>

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:id="@+id/share">

            <TextView
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="分享邀请好友"
                android:drawableStart="@drawable/user_share"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="5dp"
                  android:background="@color/light_gray"/>

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/qqgroup">

            <TextView
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="一键加群助手"
                android:drawableStart="@drawable/user_qqgroup"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="15dp"
        android:background="@color/light_gray"/>
        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="检查更新"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="5dp"
                  android:background="@color/light_gray"/>

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="关于我们"
                android:layout_height="wrap_content" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="5dp"
                  android:background="@color/light_gray"/>

        <RelativeLayout
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="最新公告，请随时点击查看"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>
    </ScrollView>


</RelativeLayout>
